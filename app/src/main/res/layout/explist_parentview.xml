<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backs_effects">

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="4dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/artistus"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/ParentViewText"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img"
        android:layout_toRightOf="@+id/img"
        android:layout_marginTop="2dp"
        android:lines="1"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:text="Text For Test"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/ParentViewSongsFromArtistText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ParentViewText"
        android:layout_toEndOf="@+id/img"
        android:layout_toRightOf="@+id/img"
        android:lines="1"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:text="Text For Test"
        android:textColor="@color/link_text_material_light"/>


</RelativeLayout>