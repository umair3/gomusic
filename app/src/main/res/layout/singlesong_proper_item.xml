<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainDetailView"
    android:padding="4dp"
    android:layout_marginLeft="4dp"
    android:background="@drawable/backs_effects"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_audiotrack_black_48dp"
        android:padding="4dp"
        android:layout_marginLeft="4dp"
        android:alpha="0.5"

        />
    <TextView
        android:id="@+id/songTitleProper"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img"
        android:layout_toRightOf="@+id/img"
        android:layout_marginLeft="5dp"
        android:textSize="17sp"
        android:lines="1"
        android:text="Hello Testing"
        android:textColor="#000"/>


    <TextView
        android:id="@+id/songArtistProper"
        android:layout_width="200dp"
        android:layout_below="@+id/songTitleProper"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:layout_toEndOf="@+id/img"
        android:layout_marginLeft="4dp"
        android:textSize="14sp"
        android:lines="1"
        android:text="Hello Testing"
        android:textColor="@color/link_text_material_light"
        />

    <TextView
        android:id="@+id/songDuration"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_below="@+id/songTitleProper"
        android:textSize="14sp"
        android:text="Duration"
        android:textColor="@color/link_text_material_light"
        />




</RelativeLayout>