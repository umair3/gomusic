<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/seekBar_asutMediaController"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/asutMediaController_ButtonPanelPading"
        android:paddingBottom="@dimen/asutMediaController_ButtonPanelPading"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/repeatButton"
            android:layout_width="@dimen/repeatshufflebutton_width"
            android:layout_height="@dimen/repeatshufflebutton_height"
            android:src="@drawable/_ic_repeat_48dp"
            android:backgroundTintMode="screen"
            android:layout_marginRight="@dimen/shuffleandrepeatbutton_Margin"
            />

        <ImageButton
            android:id="@+id/previosButton"
            android:layout_width="@dimen/prevnextbutton_width"
            android:layout_height="@dimen/prevnextbutton_height"
            android:src="@drawable/_ic_previous_48dp"
            android:tint="@color/colorPrimary"
            android:backgroundTintMode="screen"
            android:layout_marginRight="@dimen/asutMediaControllerButtons_singleMargin"
            />

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="@dimen/playbutton_width"
            android:layout_height="@dimen/playbutton_height"
            android:src="@drawable/_ic_play_circle_icon_black_24dp"
            android:tint="@color/colorPrimary"
            android:backgroundTintMode="screen"
            android:layout_marginLeft="@dimen/asutMediaControllerButtons_singleMargin"
            android:layout_marginRight="@dimen/asutMediaControllerButtons_singleMargin"
            />


        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="@dimen/prevnextbutton_width"
            android:layout_height="@dimen/prevnextbutton_height"
            android:src="@drawable/_ic_next_48dp"
            android:tint="@color/colorPrimary"
            android:backgroundTintMode="screen"
            android:layout_marginLeft="@dimen/asutMediaControllerButtons_singleMargin"
            />


        <ImageButton
            android:id="@+id/shuffleButton"
            android:layout_width="@dimen/repeatshufflebutton_width"
            android:layout_height="@dimen/repeatshufflebutton_height"
            android:src="@drawable/_ic_shuffle_48dp"
            android:backgroundTintMode="screen"
            android:layout_marginLeft="@dimen/shuffleandrepeatbutton_Margin"
            />

    </LinearLayout>



</LinearLayout>